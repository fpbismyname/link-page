---
import type {
    BlockItem,
    FabInterface,
    FooterTextInterface,
    HeaderInterface,
    ListLinkInterface,
    ListMenuInterface
} from "@datas/blocks.type";
import Header from "./Blocks/Header.astro";
import HeaderProfile from "./Blocks/HeaderProfile.astro";
import type { HeaderProfileInterface } from "@datas/blocks.type";
import ListLink from "./Blocks/ListLink.astro";
import FooterText from "./Blocks/FooterText.astro";
import ListMenu from "./Blocks/ListMenu.astro";
import Fab from "./Blocks/Fab.astro";

// Type & Interfaces
interface Props {
    blocks: BlockItem[];
}

// Vars
const { blocks } = Astro.props;
---

{
    blocks.map((block) => {
        switch (block.type) {
            case "header":
                return <Header content={block.content as HeaderInterface} />;
            case "header-profile":
                return <HeaderProfile content={block.content as HeaderProfileInterface} />;
            case "list-link":
                return <ListLink content={block.content as ListLinkInterface[]} />;
            case "list-menu":
                return <ListMenu content={block.content as ListMenuInterface[]} />;
            case "footer-text":
                return <FooterText content={block.content as FooterTextInterface} />;
            case "fab":
                return <Fab content={block.content as FabInterface} />;
        }
    })
}
