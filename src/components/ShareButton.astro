---
import { site } from "@datas/site";
import clsx from "clsx";
import { Icon } from "astro-iconify";
import { Image } from "astro:assets";

// Type & Interfaces
interface Props {
    class?: string;
}
// Vars
const { class: customClass, ...rest } = Astro.props;
---

<button
    class={clsx("transition-all btn btn-soft btn-primary btn-circle", customClass)}
    {...rest}
    onclick="modalCopy.showModal()"
>
    <Icon name="lucide:share-2" class="w-6" />
</button>

<dialog id="modalCopy" class="modal">
    <div class="modal-box w-full max-w-xs">
        <h3 class="text-xl font-bold text-center mb-6">
            <Icon name="lucide:users" class="inline me-2 w-6" />
            Ajak temanmu kesini
        </h3>
        <div class="flex flex-col gap-2">
            {
                site.shareOptions.map((item) => {
                    return (
                        <button class="btn btn-soft btn-primary justify-start" data-action={item.action}>
                            {item.icon.type === "icon" && <Icon name={item.icon.name} class={clsx(item.icon.style)} />}
                            {item.icon.type === "image" && (
                                <Image
                                    src={item.icon.name as ImageMetadata}
                                    alt={`${item.label} dock icon`}
                                    width={500}
                                    height={500}
                                    class={clsx("aspect-square object-center object-contain", item.icon.style)}
                                />
                            )}
                            <span>{item.label}</span>
                        </button>
                    );
                })
            }
        </div>
        <div class="modal-action justify-center">
            <form method="dialog">
                <button class="btn btn-circle btn-secondary btn-soft">
                    <Icon name="lucide:x" class="w-6" />
                </button>
            </form>
        </div>
    </div>
    <form method="dialog" class="modal-backdrop">
        <button>close</button>
    </form>
</dialog>
